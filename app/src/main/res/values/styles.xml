<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="speedometerStyle">@style/SpeedometerDefaultStyle</item>
    </style>

    <style name="SpeedometerDefaultStyle">
        <item name="normalSpeedColor">@color/colorPrimaryDark</item>
        <item name="textSize">@dimen/defaultTextSize</item>
        <item name="maxSpeed">270</item>
    </style>

</resources>
